<% include partials/header %>

<div class="container profile-container">
  <div class="profile-sidebar">
    <div class="profile-card">
      <div class="image">
        <img src="/img/default.jpg" alt="profile image">
      </div>
      <div class="account-info">
        <h2>Benjamin Buck</h2>
        <p class="tag">@benjaminbuck</p>
        <p class="biography">This is my profile biography where I write a little bit about myself.</p>
      </div>
      <div class="account-buttons">
        <div class="follow">
          <h4>Follow</h4>
        </div>
        <div class="add">
          <h4>Add Friend</h4>
        </div>
      </div>
      <div class="stats">
        <div class="profile-stats followers">
          <h3>100,000</h3>
          <p>Followers</p>
        </div>
        <div class="profile-stats following">
          <h3>200</h3>
          <p>Following</p>
        </div>
        <div class="profile-stats posts">
          <h3>102</h3>
          <p>Posts</p>
        </div>
        <div class=" profile-stats friends">
          <h3>2</h3>
          <p>Friends</p>
        </div>
      </div>
    </div>
  </div>
  <div class="profile-feed">
    <div class="profile-banner">
      <img src="/img/background-login1.png" alt="profile banner">
    </div>
    <div class="tabs">
      <ul>
        <li>Profile Feed</li>
        <li>Activites</li>
        <li>Something</li>
        <li>Something Else</li>
      </ul>
    </div>

  </div>
</div>

