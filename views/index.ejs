<% include partials/header %>

<div class="container">
  <div class="home-container">
    <div class="sidebar">
      <div id="sidebar-profile" class="module">
        <div class="account">
          <img class="avatar" src="<%= currentUser.profileImage %>" alt="">

          <!-- profile card -->
          <div class="profile-name">
            <p><%= currentUser.firstName + " " + currentUser.lastName %></p>
            <p class="tag">@<%= currentUser.username %></p>
          </div>

          <!-- profile biography -->
          <div class="profile-bio">
            <p>I am a computer science student who likes to build interesing projects.</p>
          </div>

          <!-- profile statistics -->
          <div class="profile-stats">
            <div class="flex-fifty followers stats">
              <h3>1003</h3>
              <p>Followers</p>
            </div>
            <div class="flex-fifty posts stats">
              <h3>10,302</h3>
              <p>Posts</p>
            </div>
          </div>
          <a class="sidebar-button" href="/user">View Profile</a>
          <a class="sidebar-button" href="/settings">Profile Settings</a>
        </div>
      </div>
    </div>
    <div class="feed" id="feed">
      <div class="module">
        <div class="content-padding newContent">
          <h2>Create a new post</h2>
          <form class="new-content-form" action="/post/new" method="POST">
            <button class="addImage"><i class="far fa-image"></i></button>
            <textarea name="post" id="newPost" rows="4" cols="80" placeholder="Write a new post"></textarea>
            <button class="btn">Create</button>
          </form>
        </div>
      </div>

      <div class="module">
        <div class="content-padding recent-posts">

          <% posts.forEach(function(post){ %>
            <div class="single-post">
              <div class="userinfo">
                <img class="avatar" src="<%= currentUser.profileImage %>" alt="avatar">
                <div class="username">
                  <p class="userinfo-username"><%=post.author.username%></p>
                  <small class="tag">@<%=post.author.username%></small>
                </div>
              </div>
              <div class="post-body">
                <p><%=post.post%></p>
              </div>
              <div class="post-tags">
                <a href="#"><small class="tag post-tag">#benjaminalan</small></a>
                <a href="#"><small class="tag post-tag">#new</small></a>
              </div>
              <div class="post-interactions">
                0 <i class="far fa-heart"></i>0 <i class="fas fa-retweet"></i>0 <i class="fas fa-reply"></i>
              </div>
            </div>
          <% }); %>



        </div>
      </div>
    </div>

    <!-- Right hand sidebar -->
    <div class="sidebar">
      <div class="recommendations module">
        <div class="title">
          <h4>Follow Recommendations</h4>
        </div>

        <div class="recommended-profile">
          <div class="img">
            <img class="avatar" src="<%= currentUser.profileImage %>" alt="">
          </div>
          <div class="content">
            <p>Benjamin Buck</p>
            <p class="tag">@benjaminbuck</p>
          </div>
          <div class="follow-btn">
            <button class="follow">Follow</button>
          </div>
        </div>

        <div class="recommended-profile">
          <div class="img">
            <img class="avatar" src="<%= currentUser.profileImage %>" alt="">
          </div>
          <div class="content">
            <p>Benjamin Buck</p>
            <p class="tag">@benjaminbuck</p>
          </div>
          <div class="follow-btn">
            <button class="follow">Follow</button>
          </div>
        </div>

        <div class="recommended-profile">
          <div class="img">
            <img class="avatar" src="<%= currentUser.profileImage %>" alt="">
          </div>
          <div class="content">
            <p>Benjamin Buck</p>
            <p class="tag">@benjaminbuck</p>
          </div>
          <div class="follow-btn">
            <button class="follow">Follow</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% include partials/footer %>
